{% extends "layout.html.twig" %}
{% set epreuveMenu = true %}
    {% block title %}Suppression d'un epreuve{% endblock %}
    {% block content %}
        <h2 class="text-center">{{ block('title') }}</h2>
        <div class="well">
            <div class="tab-content">             
                {% if epreuves %}
                    <div class="table-responsive">
                        <table class="table table-hover table-condensed">
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Prenom</th>
                                    <th>Classe</th>
                                    <th>Professeur</th>
                                    <th>Date de passage</th>  
                                    <th>Horaire</th>
                                    <th>Langue</th>                                    
                                    <th>Salle</th>
                                    <th></th>
                                </tr>
                            </thead>
                            {% for epreuve in epreuves %}
                                <tr>
                                    <td><a href="/epreuves/{{ epreuve.eleve.id }}">{{ epreuve.eleve.nom }} </a></td>
                                    <td>{{epreuve.eleve.prenom}}</td>
                                    <td>{{ epreuve.eleve.classe.libelle }}</td>
                                    <td>{{ epreuve.professeur.nom }} {{ epreuve.professeur.prenom }}</td>
                                    <td>{{ epreuve.datepassage }}</td>
                                    <td>{{ epreuve.heurepassage.heuredeb }}-{{epreuve.heurepassage.heurefin}}</td>
                                    <td>{{ epreuve.langue.libelle }}</td>                                    
                                    <td>{{ epreuve.salle.libelle }}</td>
                                    <td>
                                        <a href="/admin/epreuves/delete/{{epreuve.eleve.id }}" class="btn btn-danger btn-xs" title="Epreuve"><span class="glyphicon glyphicon-remove"></span></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                {% else %}
                    <div class="alert alert-warning">Aucun epreuve trouv√©.</div>                    
                {% endif %}
            </div>
        </div>
    {% endblock %}